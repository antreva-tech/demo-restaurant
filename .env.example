# Copy to .env.local and fill in. Required for app + db: npm run env:check
# Site content (name, tagline, logo, images, etc.) is in src/config/site.json — edit that file, not env.

# Neon: https://console.neon.tech → project → Connection details
# Use -pooler host for runtime. Add connect_timeout=15 if you see connection timeouts (e.g. cold start).
DATABASE_URL="postgresql://user:password@ep-xxx-pooler.region.aws.neon.tech/neondb?sslmode=require"
DIRECT_URL="postgresql://user:password@ep-xxx.region.aws.neon.tech/neondb?sslmode=require"

# Auth (required). Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-at-least-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Payment integrations: encrypt integration config (secrets). 64 hex chars = 32 bytes. Generate: openssl rand -hex 32
ENCRYPTION_KEY=""

# Seed (optional; used by npm run db:seed)
SEED_OWNER_EMAIL="owner@demo.com"
SEED_OWNER_PASSWORD="changeme"

# Contact: WhatsApp number for site (optional). E.164, e.g. 18095551234. Site content is in src/config/site.json.
NEXT_PUBLIC_WHATSAPP_NUMBER=""

# Online order notifications (optional). Email sent when a customer places an order on the site.
NOTIFICATION_EMAIL=""
RESEND_API_KEY=""
RESEND_FROM_EMAIL="onboarding@resend.dev"

# WhatsApp: order summary sent to restaurant (optional). Twilio WhatsApp sandbox or approved number.
# NOTIFICATION_WHATSAPP_TO = restaurant number E.164 (e.g. 18095551234).
TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_WHATSAPP_FROM=""
NOTIFICATION_WHATSAPP_TO=""

# Cloudflare Turnstile: bot protection for online orders (optional).
# Create widget at https://dash.cloudflare.com → Turnstile. Use "Managed" mode.
# Test keys: site=1x00000000000000000000AA, secret=1x0000000000000000000000000000000AA (always passes)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=""
TURNSTILE_SECRET_KEY=""

# Vercel Blob: menu item images. Create store in Vercel → Storage → Blob; use vercel env pull for local.
BLOB_READ_WRITE_TOKEN=""
